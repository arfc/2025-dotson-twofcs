	date = {2015},
	langid = {english},
	keywords = {Evolutionary Multiobjective Optimization, Generational distance, Inverted generational distance, Pareto compliance, Performance indicators},
	file = {Full Text PDF:/Users/samdotson/Library/CloudStorage/SynologyDrive-sam-cloud/ebooks/Zotero/storage/GGAFBRFZ/Ishibuchi et al. - 2015 - Modified Distance Calculation in Generational Dist.pdf:application/pdf},
