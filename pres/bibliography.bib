	file = {Full Text PDF:/Users/samdotson/Library/CloudStorage/SynologyDrive-sam-cloud/ebooks/Zotero/storage/AK9I6S73/Abou-Jaoude et al. - 2024 - Meta-Analysis of Advanced Nuclear Reactor Cost Estimations.pdf:application/pdf},
