	keywords = {Energy systems optimisation model, Multi-regional, National-scale, Spatial resolution, Spatiotemporal modelling, Variable renewable energy sources},
	file = {ScienceDirect Snapshot:/Users/samdotson/Library/CloudStorage/SynologyDrive-sam-cloud/ebooks/Zotero/storage/UIKP9EEE/S2211467X21000882.html:text/html},
