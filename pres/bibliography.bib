	file = {ScienceDirect Full Text PDF:/Users/samdotson/Library/CloudStorage/SynologyDrive-sam-cloud/ebooks/Zotero/storage/T56G476G/Lovering et al. - 2016 - Historical construction costs of global nuclear po.pdf:application/pdf;ScienceDirect Snapshot:/Users/samdotson/Library/CloudStorage/SynologyDrive-sam-cloud/ebooks/Zotero/storage/V8WZZ2G3/S0301421516300106.html:text/html},
