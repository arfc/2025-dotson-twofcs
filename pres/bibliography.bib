	keywords = {Social acceptance, Boundaries, Community benefit funds, Fairness, Legitimacy},
	file = {ScienceDirect Full Text PDF:/Users/samdotson/Library/CloudStorage/SynologyDrive-sam-cloud/ebooks/Zotero/storage/DJUN6HNH/Devine-Wright and Sherry-Brennan - 2019 - Where do you draw the line Legitimacy and fairnes.pdf:application/pdf;ScienceDirect Snapshot:/Users/samdotson/Library/CloudStorage/SynologyDrive-sam-cloud/ebooks/Zotero/storage/RFZAZI5Z/S2214629618312866.html:text/html},
