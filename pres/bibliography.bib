@article{gabrielli_robust_2019,
	title = {Robust and optimal design of multi-energy systems with seasonal storage through uncertainty analysis},
	volume = {238},
	issn = {0306-2619},
	url = {https://www.sciencedirect.com/science/article/pii/S0306261919300649},
