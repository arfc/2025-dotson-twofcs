@article{gladkykh_when_2021,
	title = {When justice narratives meet energy system models: Exploring energy sufficiency, sustainability, and universal access in Sub-Saharan Africa},
	volume = {79},
	issn = {2214-6296},
	url = {https://www.sciencedirect.com/science/article/pii/S2214629621001687},
