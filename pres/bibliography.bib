	langid = {english},
	keywords = {Energy transitions, Coal, Embodied energy injustices, Fracking},
	file = {ScienceDirect Full Text PDF:/Users/samdotson/Library/CloudStorage/SynologyDrive-sam-cloud/ebooks/Zotero/storage/NYCM6HFK/Healy et al. - 2019 - Embodied energy injustices Unveiling and politici.pdf:application/pdf;ScienceDirect Snapshot:/Users/samdotson/Library/CloudStorage/SynologyDrive-sam-cloud/ebooks/Zotero/storage/XV7QKZYU/S2214629618306698.html:text/html},
