	langid = {english},
	note = {\_eprint: https://esajournals.onlinelibrary.wiley.com/doi/pdf/10.1002/ecm.1359},
	keywords = {forecasting, empirical dynamic modelling, information theory, permutation entropy, population dynamics, time series analysis},
